{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-Wall", 
                "-std=c++11",
                "-g",
                "${workspaceRoot}/src/**.cpp",
                " ${workspaceRoot}/src/ping/**.cpp",
                "-o",
                "${workspaceRoot}/dist/ping"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
    ],
    "version": "2.0.0",

}